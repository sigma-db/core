{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES2020",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "incremental": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*"
  ]
}