{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "allowJs": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "incremental": true
  },
  "include": [
    "lib/**/*",
    "bin/**/*"
  ]
}